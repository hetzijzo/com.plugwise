{
  "id": "com.plugwise",
  "version": "2.0.10",
  "compatibility": ">=1.0.2",
  "category": [
    "climate",
    "tools"
  ],
  "name": {
    "en": "Plugwise",
    "nl": "Plugwise"
  },
  "description": {
    "en": "Let Homey talk to your Plugwise devices",
    "nl": "Verbind Homey met je Plugwise devices"
  },
  "author": {
    "name": "Athom B.V."
  },
  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },
  "dependencies": {
    "request": "*",
    "pixl-xml": "1.0.4",
    "plugwise": "0.1.0",
    "mdns-js": "0.4.0"
  },
  "permissions": [],
  "capabilities": {
    "mode": {
      "type": "enum",
      "title": {
        "en": "Thermostat mode",
        "nl": "Thermostaat modus"
      },
      "getable": true,
      "setable": false,
      "values": [
        {"id": "0","title": {"en": "Home","nl": "Thuis"}},
        {"id": "1","title": {"en": "Away","nl": "Afwezig"}},
        {"id": "2","title": {"en": "Sleep","nl": "Slapen"}},
        {"id": "3","title": {"en": "Vacation","nl": "Vakantie"}},
        {"id": "4","title": {"en": "Frost protection","nl": "Vorstbeveiliging"}}
      ]
    }
  },
  "drivers": [
    {
      "id": "anna",
      "name": {
        "en": "Anna"
      },
      "images": {
        "large": "./drivers/anna/assets/images/large.jpg",
        "small": "./drivers/anna/assets/images/small.jpg"
      },
      "class": "thermostat",
      "icon": "/assets/icon.svg",
      "capabilities": [
        "target_temperature",
        "measure_temperature",
        "mode"
      ],
      "capabilitiesOptions": {
        "target_temperature": {
          "min": 4,
          "max": 30
        }
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices_singular",
          "navigation": {
            "next": "authenticate"
          }
        },
        {
          "id": "authenticate"
        }
      ]
    },
    {
      "id": "stretch",
      "name": {
        "en": "Stretch"
      },
      "images": {
        "large": "./drivers/stretch/assets/images/large.jpg",
        "small": "./drivers/stretch/assets/images/small.jpg"
      },
      "class": "socket",
      "capabilities": [
        "onoff",
        "measure_power",
        "meter_power"
      ],
      "pair": [
        {
          "id": "start"
        },
        {
          "id": "authenticate"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "choose_slave"
          }
        },
        {
          "id": "choose_slave",
          "template": "choose_slave",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {}
}
